bindsym $mod+Shift+F6 exec --no-startup-id rofi -font "PragmataPro-10" -fg "#505050" -bg "#000000" -hlfg "#FFFFFF" -hlbg "#0C73C2" -o 85 -bc "#505050" -json $HOME/bin/rofi/mpd.json
for_window [class="Keepassx" title="^(?!Auto\-Type\ \-\ KeePassX$)"] move scratchpad
